<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:orientation="vertical"
        tools:context=".RegisterUserFragment">

        <ImageView
            android:id="@+id/imageButtonArrowBackRegisterUser"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/textViewTitleRegisterUser"
            style="@style/Text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/title_register_user"
            android:textColor="@color/purple_700"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textViewSubtitleRegisterUser"
            style="@style/Text_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/subtitle_register_user" />

        <EditText
            android:id="@+id/editTextName"
            style="@style/Text_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="@string/text_hint_name_register_user"
            android:inputType="textAutoComplete" />

        <EditText
            android:id="@+id/editTextEmail"
            style="@style/Text_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/text_hint_email_register_user"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextPassword"
            style="@style/Text_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/text_hint_password_register_user"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextCity"
            style="@style/Text_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/text_hint_city_register_user"
            android:inputType="textAutoComplete" />

        <EditText
            android:id="@+id/editTextCountry"
            style="@style/Text_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/text_hint_country_register_user"
            android:inputType="textAutoComplete" />

        <Button
            android:id="@+id/buttonRegisterUser"
            style="@style/Text_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/background_button"
            android:text="@string/text_button_register_user" />
    </LinearLayout>
</ScrollView>
